                    <TextBox TextChanged="specialLeaveDay_TextChanged" x:Name="specialLeaveDay" HorizontalAlignment="Left" Height="23" Margin="296,283,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="54" Grid.Column="2"/>
